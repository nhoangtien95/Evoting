<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Mosaddek">
    <meta name="keyword" content="FlatLab, Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">
    <link rel="shortcut icon" href="/Content/Admin/img/favicon.html">

    <title>Admin EVote</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/Admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/Admin/css/bootstrap-reset.css" rel="stylesheet">
    <!--external css-->
    <link href="/Content/Admin/assets/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <!--right slidebar-->
    <link href="/Content/Admin/css/slidebars.css" rel="stylesheet">
    <!-- Custom styles for this template -->
    <link href="/Content/Admin/css/style.css" rel="stylesheet">
    <link href="/Content/Admin/css/style-responsive.css" rel="stylesheet" />

    <script src="~/Content/Admin/js/jquery.dcjqaccordion.2.7.js"></script>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 tooltipss and media queries -->
    <!--[if lt IE 9]>
      <script src="js/html5shiv.js"></script>
      <script src="js/respond.min.js"></script>
    <![endif]-->

</head>

<body>

    <section id="container" class="">
        <!--header start-->
        <header class="header white-bg">
            <div class="sidebar-toggle-box">
                <div data-original-title="Toggle Navigation" data-placement="right" class="fa fa-bars tooltips"></div>
            </div>
            <!--logo start-->
            <a href="index.html" class="logo">E<span>Vote</span></a>
            <!--logo end-->
        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside>
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                    <li>
                        <a href="@Url.Action("Index", "Admin")">
                            <i class="fa fa-laptop"></i>
                            <span>BlockChain</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Candidates", "Admin")">
                            <i class="fa fa-users"></i>
                            <span>Candidates</span>
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("NewCandidate", "Admin")">
                            <i class="fa fa-pencil"></i>
                            <span>New Candidate</span>
                        </a>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->
        <!--main content start-->
        <section id="main-content">
            <section class="wrapper">
                <!-- page start-->
                <div id="ltr" style=" max-width: 560px;">

                    <div class="row blockchains" >
                        @foreach (var item in blocks)
                        {
                            <div class="col-lg-6" style=" max-width: 560px; width: 560px">
                                <section class="panel">
                                    <header class="panel-heading">
                                        @item.Block_ID
                                    </header>
                                    
                                        @if (item.Code.Substring(0, 3) == "000")
                                        {
                                            <div class="panel-body" style="background-color:#78CD51">
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Block Key</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control b_key" disabled value="@item.Block_key">
                                                        </div>
                                                        <label>Data</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control test" id=@item.Block_ID value="@item.Data">
                                                        </div>
                                                        <label>Previous Key</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control" disabled value="@item.Prev_ID">
                                                        </div>
                                                        <label>Hash Code</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control" disabled value="@item.Code">
                                                        </div>
                                                        <input type="button" value="Verify" class="btn btn-warning" name=@item.Block_ID style="margin-left: 200px; margin-top: 7px;">
                                                    </div>
                                                </form>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="panel-body" style="background-color:#ec6459">
                                                <form role="form">
                                                    <div class="form-group">
                                                        <label>Block Key</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control b_key" disabled value="@item.Block_key">
                                                        </div>
                                                        <label>Data</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control test" id=@item.Block_ID value="@item.Data">
                                                        </div>
                                                        <label>Previous Key</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control" disabled value="@item.Prev_ID">
                                                        </div>
                                                        <label>Hash Code</label>
                                                        <div class="iconic-input">
                                                            <input type="text" class="form-control" disabled value="@item.Code">
                                                        </div>
                                                        <input type="button" value="Verify" class="btn btn-warning" name=@item.Block_ID style="margin-left: 200px; margin-top: 7px;">
                                                    </div>
                                                </form>
                                            </div>
                                        }                                               


                                </section>
                            </div>
                        }
                        
                       
                    </div>

                </div>
                <!-- page end-->
            </section>
        </section>
        <!--main content end-->
    </section>
    <!-- js placed at the end of the document so the pages load faster -->
    <script src="/Content/Admin/js/jquery.js"></script>
    <script src="/Content/Admin/js/bootstrap.min.js"></script>
    <script src="/Content/Admin/js/jquery.scrollTo.min.js"></script>
    <script src="/Content/Admin/js/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/Content/Admin/assets/jquery-knob/js/jquery.knob.js"></script>
    <script src="/Content/Admin/js/respond.min.js"></script>

    <!--right slidebar-->
    <script src="/Content/Admin/js/slidebars.min.js"></script>

    <!--common script for all pages-->
    <script src="/Content/Admin/js/common-scripts.js"></script>

