        $('.test').keyup(function () {
            var id = this.id;
            var data = this.value;
            console.log(id);
            console.log(data);
            $.ajax({
                url: '@Url.Action("Hash", "Admin")',
                data: { _id: id, _data: data },
                type: 'POST',
                success: function (data) {
                    if (data != null && data.success) {
                        console.log("success")
                        $('.blockchains').load('@Url.Content(Url.Action("BlockLoad", "Admin"))');
                    }
                }
            });
        });

        $(".btn").click(function () {
            var id = this.name;
            $.ajax({
                url: '@Url.Action("IsMine", "Admin")',
                data: { _id: id},
                type: 'POST',
                success: function (data) {
                    if (data != null && data.success) {
                        console.log("success")
                        $('.blockchains').load('@Url.Content(Url.Action("BlockLoad", "Admin"))');
                    }
                }
            });
        });


      //knob
      $(".knob").knob();
    </script>

</body>

