@model Evoting.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>

<!-- Mirrored from coffeecreamthemes.com/themes/jobseek/site/post-a-job.html by HTTrack Website Copier/3.x [XR&CO'2014], Thu, 30 Jul 2015 04:55:17 GMT -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Jobseek - Job Board Responsive HTML Template">
    <meta name="author" content="Coffeecream Themes, info@coffeecream.eu">
    <title>Sign In To Vote</title>
    <link rel="shortcut icon" href="/Content/images/favicon.png">

    <!-- Main Stylesheet -->
    <link href="/Content/CSS/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body style="margin-top: -250px">

    <!-- ============ PAGE LOADER START ============ -->

    <div id="loader">
        <i class="fa fa-cog fa-4x fa-spin"></i>
    </div>

    <!-- ============ PAGE LOADER END ============ -->
    <!-- ============ JOBS START ============ -->

    <section id="jobs">
        <div class="container">
            <div class="row text-center">
                <div class="col-sm-12">
                @Html.AntiForgeryToken()                
                @using (Html.BeginForm("Login", "Vote", FormMethod.Post))
                {
                    <div class="jumbotron">
                        @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                            <div class="row" style="padding-left: 330px">
                                <div class="col-sm-6">
                                    <h2>Login</h2>
                                    <div class="form-group" id="job-username-group">
                                        <label for="job-email">Username</label>
                                        @Html.TextBoxFor( x => x.Username, new { @class= "form-control alert alert-warning", @placeholder = "Your Username"})
                                    </div>
                                    <div class="form-group" id="job-password-group">
                                        <label for="job-title">Password</label>
                                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control alert alert-warning", @placeholder = "Your Password" })
                                    </div>
                                </div>
                            </div>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin-top: -220px">Login</button>
                }
                </div>
            </div>

        </div>
    </section>

    <!-- ============ JOBS END ============ -->
  

</body>

