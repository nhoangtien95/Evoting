<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="description" content="Jobseek - Job Board Responsive HTML Template">
    <meta name="author" content="Coffeecream Themes, info@coffeecream.eu">
    <title>Sign Up To Vote</title>
    <link rel="shortcut icon" href="/Content/images/favicon.png">

    <!-- Main Stylesheet -->
    <link href="/Content/CSS/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->

</head>
<body style="margin-top: -250px">

    <!-- ============ PAGE LOADER START ============ -->

    <div id="loader">
        <i class="fa fa-cog fa-4x fa-spin"></i>
    </div>

    <!-- ============ PAGE LOADER END ============ -->
 
    <!-- ============ JOBS START ============ -->

    <section id="jobs" >
        <div class="container">
            <div class="row text-center">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                <div class="col-sm-12">
                @using (Html.BeginForm("Verify", "Vote", FormMethod.Post))
                {
                    <div class="jumbotron">
                        <h3>Please Enter Your ID</h3>
                        <div class="col-sm-6" style="margin-left: 230px">
                            <div class="form-group" id="job-email-group">
                                <input type="email" class="form-control alert alert-warning" id="job-email" placeholder="you@yourdomain.com">
                            </div>
                        </div>
                        <br /><br />
                    </div>                    
                    <button type="submit" class="btn btn-primary" style="margin-top: -220px">Verify</button>
                }
                </div>
            </div>


        @using (Html.BeginForm("Verify", "Vote", FormMethod.Post, new { id = "show_message", style = "display:none" }))
        {
                <div class="row" style="padding-left: 399px">
                    <div class="col-sm-6">
                        <h2>Creating Account To Vote</h2>
                        <div class="form-group" id="job-email-group">
                            <label for="job-email">Username</label>
                            <input type="email" class="form-control" id="job-email" placeholder="Your Username">
                        </div>
                        <div class="form-group" id="job-title-group">
                            <label for="job-title">Password</label>
                            <input type="text" class="form-control" id="job-title" placeholder="Your Password">
                        </div>
                    </div>
                </div>
                <div class="row text-center">
                    <p>&nbsp;</p>
                    <a href="#" class="btn btn-primary btn-lg">Create <i class="fa fa-address-book" aria-hidden="true"></i></a>
                </div>
        }

        </div>
    </section>

    <!-- ============ JOBS END ============ -->   

    <!-- Modernizr Plugin -->
    <script src="/Content/js/modernizr.custom.79639.js"></script>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/Content/js/jquery-1.11.2.min.js"></script>

    <!-- Bootstrap Plugins -->
    <script src="/Content/js/bootstrap.min.js"></script>

    <!-- Retina Plugin -->
    <script src="/Content/js/retina.min.js"></script>

    <!-- ScrollReveal Plugin -->
    <script src="/Content/js/scrollReveal.min.js"></script>

    <!-- Flex Menu Plugin -->
    <script src="/Content/js/jquery.flexmenu.js"></script>

    <!-- Slider Plugin -->
    <script src="/Content/js/jquery.ba-cond.min.js"></script>
    <script src="/Content/js/jquery.slitslider.js"></script>

    <!-- Carousel Plugin -->
    <script src="/Content/js/owl.carousel.min.js"></script>

    <!-- Parallax Plugin -->
    <script src="/Content/js/parallax.js"></script>

    <!-- Counterup Plugin -->
    <script src="/Content/js/jquery.counterup.min.js"></script>
    <script src="/Content/js/waypoints.min.js"></script>

    <!-- No UI Slider Plugin -->
    <script src="/Content/js/jquery.nouislider.all.min.js"></script>

    <!-- Bootstrap Wysiwyg Plugin -->
    <script src="/Content/js/bootstrap-wysiwyg.js"></script>
    <script src="/Content/js/jquery.hotkeys.js"></script>

    <!-- Flickr Plugin -->
    <script src="/Content/js/jflickrfeed.min.js"></script>

    <!-- Fancybox Plugin -->
    <script src="/Content/js/fancybox.pack.js"></script>

    <!-- Magic Form Processing -->
    <script src="/Content/js/magic.js"></script>

    <!-- jQuery Settings -->
    <script src="/Content/js/settings.js"></script>


</body>

